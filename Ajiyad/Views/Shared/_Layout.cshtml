    <footer>
        <div class="container text-center d-flex align-items-center justify-content-center h-100">
          
                <p>
                    © AJIAD - 2024, All rights reserved
                </p>
           
        </div>
    </footer>
    <script src="~/lib/jquery/jquery.min.js"></script>
