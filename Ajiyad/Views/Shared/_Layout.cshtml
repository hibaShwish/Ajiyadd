    <div class="sub-header">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <ul class="info">
                        <li><i class="fa fa-envelope"></i>info@ajiyad.com</li>
                        <li>
                            <i class="fa fa-map"></i>Building No 63, Mezzanine 1 Al Falah Street - Abu dhabi
                        </li>
                        <li><i class="fa fa-phone"></i>+971 52 244 1484</li>
                        <li><i class="fa fa-phone"></i>+971 526267200 </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <!-- ***** Header Area Start ***** -->
    <header class="header-area header-sticky">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <nav class="main-nav">
                        <!-- ***** Logo Start ***** -->
                        <a asp-action="Index" class="logo">
                            <img src="~/images/logo.png" class="pb-3 pt-2" width="100">
                        </a>
                        <!-- ***** Logo End ***** -->
                        <!-- ***** Menu Start ***** -->
                        <ul class="nav d-lg-flex align-items-lg-center m-0">
                            <li><a asp-action="Index" class="active">Home</a></li>
                            <li><a href="/Home/Index/#projects">Projects</a></li>
